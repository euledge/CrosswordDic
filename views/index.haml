%img.bg{:alt => "Crossword Anyone?",  :src => "http://farm3.staticflickr.com/2208/2329007153_6b0d25b5e3_o.jpg"}
#container
  .row
    .span12
      %form.form-inline{ :method => "get", :action => "search"}
        %input.span5{ :name => "loc", :type => "text", :placeholder => "Location: City,  State,  Zip"}
        %button.btn.btn-primary{ :type => "submit" }

  #header query_word の検索結果
  %table
    - @results.each do |word|
      %tr
        %th よみ：
        %td= word['yomi']
        %th 単語：
        %td= word['word']
        %th データ元：
        %td= word['source']
/        = link_to(word['word'],  'http://dic.yahoo.co.jp/dsearch?dtype=0&p=' +word['word'])

