%img.bg{:alt => "clossword", :src => "images/2329007153_c070423a15_b.jpg"}
#container
  %h1 #{@query_word} の検索結果

  %table
    - @results.each do |word|
      %tr
        %th よみ：
        %td= word['yomi']
        %th 単語：
        %td= word['word']
        %th データ元：
        %td= word['source']
/        = link_to(word['word'],  'http://dic.yahoo.co.jp/dsearch?dtype=0&p=' +word['word'])

